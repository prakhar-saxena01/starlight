filters:
  and:
    - file.ext == "md"
properties:
  note.pubDate:
    displayName: Date
  note.draft:
    displayName: Draft
views:
  - type: bases-cms
    name: Docs
    filters:
      and:
        - file.folder.startsWith("docs")
    imageFormat: cover
    fallbackToEmbeds: true
    titleProperty: note.title
    descriptionProperty: note.description
    customizeNewButton: true
    draftStatusUseFilenamePrefix: true
    showDraftStatus: true
    newNoteLocation: ""
